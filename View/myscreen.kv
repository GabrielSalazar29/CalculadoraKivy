<MyButton@Button>
    font_size: '20'

<MyScreenView>
    BoxLayout:
        orientation: 'vertical'

        MDLabel:
            id: contaparc
            font_style: 'H6'
            halign: 'right'
            size_hint: 0.9, 0.2
        MDLabel:
            id: resultado
            text: '[b]0[/b]'
            markup: True
            halign: 'right'
            font_style: 'H3'
            size_hint: 0.9, 0.2
        MDGridLayout:
            size_hint: 1, 0.5
            cols: 4
            MyButton:
                text: "C"
                on_press: root.zerar()
            MyButton:
                text: "CE"
            MyButton:
                text: "<-"
            MyButton:
                text: "/"
                on_press: root.set_operador("/")
            MyButton:
                text: "7"
                on_press: root.set_x(int(7))
            MyButton:
                text: "8"
                on_press: root.set_x(int(8))
            MyButton:
                text: "9"
                on_press: root.set_x(int(9))
            MyButton:
                text: "X"
                on_press: root.set_operador("x")
            MyButton:
                text: "4"
                on_press: root.set_x(int(4))
            MyButton:
                text: "5"
                on_press: root.set_x(int(5))
            MyButton:
                text: "6"
                on_press: root.set_x(int(6))
            MyButton:
                text: "-"
                on_press: root.set_operador("-")
            MyButton:
                text: "1"
                on_press: root.set_x(int(1))
            MyButton:
                text: "2"
                on_press: root.set_x(int(2))
            MyButton:
                text: "3"
                on_press: root.set_x(int(3))
            MyButton:
                text: "+"
                on_press: root.set_operador("+")
            MyButton:
                text: "+/-"
            MyButton:
                text: "0"
                on_press: root.set_x(int(0))
            MyButton:
                text: ","
            MyButton:
                text: "="
                on_press: root.set_resultado()


